        String s = new String("string");
        char c='r'; int sw=0;

        do {
            if (c == s.charAt(i)) {
                sw=1;
                System.out.println("Position of " + c + " = " + i);
                break;
            } else i++;
        } while (s.charAt(i) != '\0');
